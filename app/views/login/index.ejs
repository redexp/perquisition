<% layout('layout') %>

<% appendStyles([
    'login/index.css'
]) %>

<% appendScripts([
	'views/form.js',
    'login/index/**/*.js'
]) %>

<%- renderTranslationsFor('login/index') %>

<div class="login-wrapper">
    <form id="login-form">
        <div class="form-group">
            <label class="control-label"><%= __('auth.email') %></label>
            <input class="form-control" type="text" name="username" autocomplete="off">
        </div>

        <div class="form-group">
            <label class="control-label"><%= __('auth.password') %></label>
            <input class="form-control" type="password" name="password" autocomplete="off">
        </div>

        <div>
            <%- partial('components/submit', {btn: 'auth.login'}) %>
            <a class="btn btn-default" href="/registration"><%= __('auth.registration') %></a>
        </div>
    </form>
</div>