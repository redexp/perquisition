<% layout('layout') %>

<% appendStyles([
    '/js/lib/Croppie/croppie.css',
    'login/registration.css'
]) %>

<% appendScripts([
    ['lib/Croppie/croppie.js', 'croppie'],
    'views/form.js',
    'login/registration/**/*.js'
]) %>

<%- renderTranslationsFor('login/registration') %>

<div class="registration">
    <h1><%= __('auth.registration_title') %></h1>
    <form id="registration-form">
        <div class="form-group">
            <label><%= __('auth.email') %></label>
            <input name="username" type="email" class="form-control" autocomplete="off"/>

            <div data-email_invalid class="form-error">
                <%= __('main.invalid') %>
            </div>
        </div>
        <div class="form-group">
            <label><%= __('auth.name') %></label>
            <input name="name" type="text" class="form-control" autocomplete="off"/>

            <div data-name_required class="form-error">
                <%= __('main.required') %>
            </div>
        </div>
        <div class="form-group">
            <label><%= __('auth.photo') %></label>
            <div class="photo-cropper">
                <div>
                    <label class="btn btn-sm btn-primary photo-btn">
                        <%= __('auth.upload_photo') %>
                        <input data-photo type="file" class="hidden-file-selector"/>
                    </label>
                </div>
                <div data-cropper></div>
            </div>

            <div data-photo_required class="form-error">
                <%= __('main.required') %>
            </div>
        </div>
        <div class="form-group">
            <label><%= __('auth.password') %></label>
            <input name="password" type="password" class="form-control" autocomplete="off"/>
        </div>
        <div class="form-group">
            <label><%= __('auth.confirm_password') %></label>
            <input name="confirm_password" type="password" class="form-control" autocomplete="off"/>

            <div data-password_invalid class="form-error">
                <%= __('main.invalid') %>
            </div>
        </div>

        <%- partial('components/submit') %>
    </form>
</div>