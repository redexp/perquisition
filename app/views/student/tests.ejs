<% layout('layout') %>

<% appendStyles([
    'lib/questions/view/questions.css',
    'highlight/github-gist.css'
]) %>

<% appendScripts([
    ['lib/marked/marked.min.js', 'markdown'],
    ['lib/highlight/highlight.pack.js', 'highlight'],
    'lib/detachHTML/detachHTML.js',
    ['lib/velocity/velocity.min.js', 'velocity'],
    'lib/steps/steps.js',
    'views/form.js',
    'student/tests/**/*.js'
]) %>

<%- renderTranslationsFor('student/tests') %>

<%- partial('student/header') %>

<div class="steps">
    <div id="tests" class="step active p-lg">
        <table class="table">
            <thead>
            <tr>
                <th><%= __('main.title') %></th>
                <th>&nbsp;</th>
            </tr>
            </thead>
            <tbody data-list>
            <tr class="hidden">
                <td>
                    <div data-title class="fixed-height-title"></div>
                </td>
                <td class="text-right">
                    <button data-start-test class="btn btn-xs btn-default" type="button"><%= __('student.start_test') %></button>
                </td>
            </tr>
            </tbody>
        </table>
    </div>

    <div id="test-form" class="step p-lg">
        <div data-title></div>

        <div data-questions class="questions">
            <div id="row" class="question-row"></div>

            <div id="section" class="question-section"></div>

            <div id="choice" class="question-choice">
                <div data-title class="question-title"></div>
                <div data-options class="options">
                    <div>
                        <input data-is_answer type="checkbox"/>
                        <div data-text></div>
                    </div>
                </div>
            </div>
        </div>

        <%- partial('components/submit') %>
    </div>
</div>