<% layout('layout') %>

<% appendStyles([
    'highlight/github-gist.css'
]) %>

<% appendScripts([
    ['lib/marked/marked.min.js', 'markdown'],
    ['lib/highlight/highlight.pack.js', 'highlight'],
    ['lib/velocity/velocity.min.js', 'velocity'],
    'lib/steps/steps.js',
    'views/form.js',
    'student/homework/**/*.js'
]) %>

<%- renderTranslationsFor('student/homework') %>

<%- partial('student/header') %>

<div class="steps">
    <div id="homeworks" class="step active p-lg">
        <table class="table">
            <thead>
            <tr>
                <th><%= __('main.title') %></th>
                <th>&nbsp;</th>
            </tr>
            </thead>
            <tbody data-list>
            <tr class="hidden">
                <td data-title></td>
                <td class="text-right">
                    <button data-open class="btn btn-xs btn-default" type="button"><%= __('main.open') %></button>
                </td>
            </tr>
            </tbody>
        </table>
    </div>

    <div id="homework-form" class="step p-lg">
        <div data-title class="text-center m-b"></div>
        <div data-description></div>

        <button data-cancel type="button" class="btn btn-default"><%= __('main.close') %></button>
    </div>
</div>